<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#20928b"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="411dp"
        android:layout_height="309dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/psychonauts" />

    <com.sanojpunchihewa.glowbutton.GlowButton
        android:id="@+id/btnPoderes"
        android:layout_width="191dp"
        android:layout_height="90dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="#fcf103"
        android:padding="30dp"
        android:text="Ver poderes"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnPersonajes"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:pressedGlowSize="80dp"
        app:unpressedGlowSize="20dp" />

    <com.sanojpunchihewa.glowbutton.GlowButton
        android:id="@+id/btnPersonajes"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="3dp"
        android:backgroundTint="#fcf103"
        android:padding="30dp"
        android:text="Ver personajes"
        android:textColor="@color/black"
        app:layout_constraintEnd_toStartOf="@+id/btnPoderes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:pressedGlowSize="80dp"
        app:unpressedGlowSize="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>